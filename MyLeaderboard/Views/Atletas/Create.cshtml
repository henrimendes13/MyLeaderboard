@model MyLeaderboard.Models.Atleta

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Atleta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control">
                    <option value="">Selecione a categoria</option>
                    @foreach (var categoria in ViewBag.Categories)
                    {
                        <option value="@categoria.Value">@categoria.Text</option>
                    }
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score1" class="control-label"></label>
                <input asp-for="Score1" class="form-control" />
                <span asp-validation-for="Score1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score2" class="control-label"></label>
                <input asp-for="Score2" class="form-control" />
                <span asp-validation-for="Score2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score3" class="control-label"></label>
                <input asp-for="Score3" class="form-control" />
                <span asp-validation-for="Score3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
